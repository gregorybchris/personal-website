{
  "[css]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[csv]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" },
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[typescript]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.formatOnSave": true, "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.rulers": [120],
  "eslint.validate": ["javascript", "typescript", "typescriptreact"],
  "mypy-type-checker.args": ["--config-file", "src/backend/pyproject.toml"],
  "prettier.printWidth": 120,
  "ruff.configuration": "src/backend/pyproject.toml",
  "ruff.nativeServer": true,
  "cSpell.words": [
    "bfprt",
    "boids",
    "chans",
    "cheso",
    "chladni",
    "Clords",
    "Cooldown",
    "decidio",
    "delenv",
    "dependy",
    "Gantcher",
    "Glamopee",
    "goodreads",
    "halfplane",
    "hlucb",
    "idtrace",
    "imdb",
    "jsonvl",
    "LUCB",
    "Mapbox",
    "mapometer",
    "Monon",
    "networkx",
    "Noto",
    "ossipee",
    "Ossitery",
    "ptcd",
    "quadtree",
    "raleway",
    "seedrandom",
    "setenv",
    "sweyp",
    "TikTok",
    "TikToks",
    "tinytable",
    "TMDB",
    "TUTF",
    "unscrambler",
    "vidrank",
    "Wallingford",
    "yapf",
    "zhed"
  ],
  "search.exclude": {
    "content/**": true
  }
}
