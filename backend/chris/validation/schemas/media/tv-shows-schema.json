{
  "type": "array",
  "elem": "#show",
  "cons": {
    "unique": ["@all.name", "@all.rank", "@all.link"],
    "monotone_inc": ["@all.rank"]
  },
  "defs": {
    "#show": {
      "type": "object",
      "attr": {
        "name": {
          "type": "string",
          "cons": {
            "min_length": 1,
            "max_length": 120
          }
        },
        "genre": {
          "type": "string",
          "cons": {
            "in": ["comedy", "drama", "thriller", "sitcom", "documentary"]
          }
        },
        "scores": {
          "type": "object",
          "attr": {
            "plot": "#score",
            "characters": "#score",
            "production": "#score",
            "dialog": "#score"
          }
        },
        "rank": {
          "type": "number",
          "cons": {
            "gte": 1
          }
        },
        "link": "#link"
      }
    },
    "#score": {
      "type": "number",
      "cons": {
        "gte": 1,
        "lte": 10
      }
    },
    "#link": {
      "type": "string",
      "cons": {
        "format": { "type": "regex", "pattern": "^http[s]?://" },
        "min_length": 5,
        "max_length": 120
      }
    }
  }
}
