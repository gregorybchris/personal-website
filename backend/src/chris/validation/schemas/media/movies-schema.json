{
  "type": "array",
  "elem": "#show",
  "cons": {
    "unique": ["@all.name", "@all.link"]
  },
  "defs": {
    "#show": {
      "type": "object",
      "attr": {
        "name": {
          "type": "string",
          "cons": {
            "min_length": 1,
            "max_length": 120
          }
        },
        "genres": {
          "type": "array",
          "elem": "#genre",
          "cons": {
            "min_size": 1,
            "max_size": 3
          }
        },
        "scores": {
          "type": "object",
          "attr": {
            "plot": "#score",
            "characters": "#score",
            "production": "#score",
            "dialog": "#score"
          }
        },
        "link": "#link"
      }
    },
    "#genre": {
      "type": "string",
      "cons": {
        "in": [
          "action",
          "comedy",
          "documentary",
          "drama",
          "historical fiction",
          "horror",
          "mystery",
          "romance",
          "scifi",
          "sitcom"
        ]
      }
    },
    "#score": {
      "type": "number",
      "cons": {
        "gte": 1,
        "lte": 10
      }
    },
    "#link": {
      "type": "string",
      "cons": {
        "format": { "type": "regex", "pattern": "^http[s]?://" },
        "min_length": 5,
        "max_length": 120
      }
    }
  }
}
